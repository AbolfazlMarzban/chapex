{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": false,
    "lib": [
      "es2015"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ]
  },
  "include": [
    "**/*"
  ]
}